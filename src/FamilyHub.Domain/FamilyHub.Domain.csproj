<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>FamilyHub.Domain</RootNamespace>
  </PropertyGroup>

  <!-- Pragmatic Architecture : Le Domain depend de Bricks (Shared Kernel)
       Bricks fournit BaseEntity, IDomainEvent, ValueObject, IAuditable, AuditInfo...
       Ce sont les "briques" de base du DDD, reutilisables dans n'importe quel projet. -->
  <ItemGroup>
    <ProjectReference Include="..\FamilyHub.Bricks\FamilyHub.Bricks.csproj" />
  </ItemGroup>

  <!-- CQRS: Le Domain peut dependre d'Ardalis.Result pour exprimer les erreurs metier -->
  <!-- Le Result Pattern remplace les exceptions pour communiquer les echecs de maniere explicite -->
  <ItemGroup>
    <PackageReference Include="Ardalis.Result" Version="10.1.0" />
  </ItemGroup>

  <!-- Module 06 : Authentication -->
  <!-- IdentityUser est dans ce package ; on en a besoin pour que AppUser herite d'IdentityUser -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Identity.Stores" Version="9.0.0" />
  </ItemGroup>

</Project>
